    <script>
      // Живые звёзды с градиентом и glow (Digital Cosmos внизу)
      const canvasGlowBottom = document.getElementById('cosmosCanvasGlowBottom');
      const ctxGlowBottom = canvasGlowBottom.getContext('2d');
      const starsGlowBottom = Array.from({length:32},()=>({
        x:Math.random()*900,
        y:Math.random()*160,
        r:2+Math.random()*2,
        dx:(Math.random()-0.5)*0.2,
        dy:(Math.random()-0.5)*0.2
      }));
      function drawCosmosGlowBottom(){
        ctxGlowBottom.clearRect(0,0,900,160);
        // Соединения
        for(let i=0;i<starsGlowBottom.length;i++){
          for(let j=i+1;j<starsGlowBottom.length;j++){
            const dx=starsGlowBottom[i].x-starsGlowBottom[j].x,dy=starsGlowBottom[i].y-starsGlowBottom[j].y,dist=Math.sqrt(dx*dx+dy*dy);
            if(dist<120){
              ctxGlowBottom.save();
              const grad=ctxGlowBottom.createLinearGradient(starsGlowBottom[i].x,starsGlowBottom[i].y,starsGlowBottom[j].x,starsGlowBottom[j].y);
              grad.addColorStop(0,'#7f9cf5');
              grad.addColorStop(1,'#00ffe7');
              ctxGlowBottom.strokeStyle=grad;ctxGlowBottom.globalAlpha=0.13;
              ctxGlowBottom.lineWidth=1;
              ctxGlowBottom.beginPath();ctxGlowBottom.moveTo(starsGlowBottom[i].x,starsGlowBottom[i].y);ctxGlowBottom.lineTo(starsGlowBottom[j].x,starsGlowBottom[j].y);ctxGlowBottom.stroke();
              ctxGlowBottom.restore();
            }
          }
        }
        // Звёзды
        for(const s of starsGlowBottom){
          ctxGlowBottom.save();
          const grad=ctxGlowBottom.createRadialGradient(s.x,s.y,0,s.x,s.y,s.r*3.5);
          grad.addColorStop(0,'#00ffe7');
          grad.addColorStop(0.5,'#7f9cf5');
          grad.addColorStop(1,'rgba(0,255,231,0)');
          ctxGlowBottom.beginPath();ctxGlowBottom.arc(s.x,s.y,s.r*3.5,0,2*Math.PI);
          ctxGlowBottom.globalAlpha=0.25;
          ctxGlowBottom.fillStyle=grad;ctxGlowBottom.fill();ctxGlowBottom.restore();
          ctxGlowBottom.beginPath();ctxGlowBottom.arc(s.x,s.y,s.r,0,2*Math.PI);
          ctxGlowBottom.globalAlpha=0.9;
          ctxGlowBottom.fillStyle='#7f9cf5';ctxGlowBottom.shadowColor='#00ffe7';ctxGlowBottom.shadowBlur=8;
          ctxGlowBottom.fill();ctxGlowBottom.shadowBlur=0;ctxGlowBottom.globalAlpha=1;
        }
        // Движение
        for(const s of starsGlowBottom){
          s.x+=s.dx;s.y+=s.dy;
          if(s.x<0||s.x>900) s.dx*=-1;
          if(s.y<0||s.y>160) s.dy*=-1;
        }
        requestAnimationFrame(drawCosmosGlowBottom);
      }
