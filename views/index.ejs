      <div class="contact-form">
        <h3>Send Inquiry</h3>
        <form class="neo-contact-form">
          <div class="neo-input-group">
            <input type="text" class="neo-input" placeholder="Your Name" required>
          </div>
          <div class="neo-input-group">
            <input type="email" class="neo-input" placeholder="Email" required>
          </div>
          <div class="neo-input-group">
            <input type="text" class="neo-input" placeholder="Company">
          </div>
          <div class="neo-input-group">
            <textarea class="neo-textarea" placeholder="Describe your needs" rows="4"></textarea>
