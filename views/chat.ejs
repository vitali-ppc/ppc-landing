<!DOCTYPE html>
<html lang="uk">
<head>
  <meta charset="UTF-8">
  <title>Чат з GPT</title>
  <link rel="stylesheet" href="/styles.css" />
  <style>
    .chat-container {
      max-width: 600px;
      margin: 50px auto;
      padding: 20px;
      background: white;
      border-radius: 10px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }
    textarea {
      width: 100%;
      height: 120px;
      padding: 10px;
      margin-bottom: 10px;
      font-size: 16px;
    }
    .btn {
      background: #525bdb;
      color: white;
      padding: 10px 20px;
      border: none;
      border-radius: 50px;
      cursor: pointer;
      transition: background 0.3s;
    }
    .btn:hover {
      background: #3d47c0;
    }
    .message {
      margin-top: 20px;
      white-space: pre-wrap;
      background: #f1f1f1;
      padding: 15px;
      border-radius: 8px;
    }
  </style>
</head>
<body>
  <!-- Breadcrumbs -->
  <% if (typeof breadcrumbs !== 'undefined' && breadcrumbs && breadcrumbs.length > 0) { %>
  <div class="container">
    <nav class="breadcrumbs-precisely breadcrumbs-color-1" aria-label="Breadcrumb">
      <a href="/">Home</a>
      <% breadcrumbs.forEach(function(item, index) { %>
        <span class="separator">/</span>
        <% if (index === breadcrumbs.length - 1) { %>
          <span class="current"><%= item.title %></span>
        <% } else { %>
          <a href="<%= item.url %>"><%= item.title %></a>
        <% } %>
      <% }); %>
    </nav>
  </div>
  <% } %>

  <div class="chat-container">
    <h2>Запитай щось у GPT</h2>
    <form method="POST" action="/chat">
      <textarea name="message" placeholder="Введіть ваше питання..." required></textarea>
      <button class="btn" type="submit">Надіслати</button>
    </form>

    <% if (userMessage) { %>
      <div class="message"><strong>Ви:</strong> <%= userMessage %></div>
      <div class="message"><strong>GPT:</strong> <%= botReply %></div>
    <% } %>
  </div>
</body>
</html>
