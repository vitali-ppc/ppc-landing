</button>

<script src="/scroll-to-top.js"></script>
<script>
  function scrollToContact() {
    const contactForm = document.getElementById('contact-form');
    if (contactForm) {
      contactForm.scrollIntoView({ 
        behavior: 'smooth', 
        block: 'start' 
      });
      
      setTimeout(() => {
        const nameInput = contactForm.querySelector('input[name="name"]');
        if (nameInput) {
          nameInput.focus();
        }
      }, 800);
    }
  }
</script>
