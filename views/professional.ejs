<script>
  // Розумний скрол до контактної форми
  function scrollToContactForm() {
    const contactForm = document.querySelector('.professional-contact-form');
    const nameInput = document.querySelector('input[name="name"]');
    
    if (contactForm) {
      // Простий плавний скрол до форми
      contactForm.scrollIntoView({
        behavior: 'smooth',
        block: 'start'
      });
      
      // Автофокус на поле Name після скролу
      setTimeout(() => {
        if (nameInput) {
          nameInput.focus();
        }
      }, 800);
    }
  }

  // Smooth scroll functionality
  document.addEventListener('DOMContentLoaded', function() {
    // Smooth scroll for anchor links (крім кнопки Schedule Consultation)
    const links = document.querySelectorAll('a[href^="#"]');
    links.forEach(link => {
      link.addEventListener('click', function(e) {
        e.preventDefault();
        const targetId = this.getAttribute('href');
        const targetElement = document.querySelector(targetId);
        
        if (targetElement) {
          targetElement.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });
  });

  // Form validation for professional page
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('.professional-contact-form-inner');
    
    if (form) {
      const nameInput = form.querySelector('input[name="name"]');
      const emailInput = form.querySelector('input[name="email"]');
      
      function validateEmail(email) {
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        return emailRegex.test(email);
      }
      
      function validateName(name) {
        return name.trim().length >= 2;
      }
      
      function showError(input, message) {
        let errorDiv = input.parentNode.querySelector('.error-message');
        if (!errorDiv) {
          errorDiv = document.createElement('div');
          errorDiv.className = 'error-message';
          errorDiv.style.cssText = 'color: #dc3545; font-size: 12px; margin-top: 4px; display: block;';
          input.parentNode.appendChild(errorDiv);
        }
        errorDiv.textContent = message;
        input.style.borderColor = '#dc3545';
      }
      
      function hideError(input) {
        const errorDiv = input.parentNode.querySelector('.error-message');
        if (errorDiv) {
          errorDiv.remove();
        }
        input.style.borderColor = '';
      }
      
      // Real-time validation for Name
      nameInput.addEventListener('input', function() {
        const name = this.value.trim();
        if (name === '') {
          hideError(this);
        } else if (!validateName(name)) {
          showError(this, 'Please enter a valid name');
        } else {
          hideError(this);
        }
      });
      
      nameInput.addEventListener('blur', function() {
        const name = this.value.trim();
        if (name === '') {
          showError(this, 'Please fill in your name');
        } else if (!validateName(name)) {
          showError(this, 'Please enter a valid name');
        }
      });
      
      // Real-time validation for Email
      emailInput.addEventListener('input', function() {
        const email = this.value.trim();
        if (email === '') {
          hideError(this);
        } else if (!validateEmail(email)) {
          showError(this, 'Please enter a valid email address');
        } else {
          hideError(this);
        }
      });
      
      emailInput.addEventListener('blur', function() {
        const email = this.value.trim();
        if (email === '') {
          showError(this, 'Please enter a valid email address');
        } else if (!validateEmail(email)) {
          showError(this, 'Please enter a valid email address');
        }
      });
      
      // Form submission validation
      form.addEventListener('submit', function(e) {
        e.preventDefault();
        
        let hasErrors = false;
        
        // Validate Name
        const name = nameInput.value.trim();
        if (name === '') {
          showError(nameInput, 'Please fill in your name');
          hasErrors = true;
          nameInput.focus();
        } else if (!validateName(name)) {
          showError(nameInput, 'Please enter a valid name');
          hasErrors = true;
          nameInput.focus();
        } else {
          hideError(nameInput);
        }
        
        // Validate Email
        const email = emailInput.value.trim();
        if (email === '') {
          showError(emailInput, 'Please enter a valid email address');
          hasErrors = true;
          if (!nameInput.value.trim()) emailInput.focus();
        } else if (!validateEmail(email)) {
          showError(emailInput, 'Please enter a valid email address');
          hasErrors = true;
          if (!nameInput.value.trim()) emailInput.focus();
        } else {
          hideError(emailInput);
        }
        
        if (!hasErrors) {
          // Form is valid, submit it
          form.submit();
        }
      });
    }
  });

  // Бургер-меню
  const burger = document.getElementById('burger');
  const mobileMenu = document.getElementById('mobileMenu');
  const mobileMenuOverlay = document.getElementById('mobileMenuOverlay');
  const mobileMenuLinks = document.querySelectorAll('.mobile-menu-list a');
  const mobileMenuClose = document.getElementById('mobileMenuClose');

  function openMobileMenu() {
    mobileMenu.classList.add('open');
    mobileMenuOverlay.classList.add('open');
    burger.classList.add('active');
  }
  
  function closeMobileMenu() {
    mobileMenu.classList.remove('open');
    mobileMenuOverlay.classList.remove('open');
    burger.classList.remove('active');
  }

  burger.addEventListener('click', function() {
    if (mobileMenu.classList.contains('open')) {
      closeMobileMenu();
    } else {
      openMobileMenu();
    }
  });
  mobileMenuOverlay.addEventListener('click', closeMobileMenu);
  mobileMenuLinks.forEach(link => {
    link.addEventListener('click', closeMobileMenu);
  });
  
  // Кнопка закриття в мобільному меню
  if (mobileMenuClose) {
    mobileMenuClose.addEventListener('click', closeMobileMenu);
  }
  
  // Анімація появи головного блоку
  function showOnScroll() {
    const el = document.querySelector('.professional-hero-main');
    if (!el) return;
    const rect = el.getBoundingClientRect();
    if (rect.top < window.innerHeight - 80) {
      el.classList.add('visible');
      window.removeEventListener('scroll', showOnScroll);
    }
  }
  window.addEventListener('scroll', showOnScroll);
  showOnScroll();
</script>

